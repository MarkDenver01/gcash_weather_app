<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="@color/button_border_nice" />
                    <corners android:radius="8dp" />

                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />

                    <solid android:color="@color/button_effect_3" />

                </shape>
            </item>
            <item android:state_enabled="true">
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="@color/button_effect_1" />
                    <corners android:radius="8dp" />

                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />

                    <solid android:color="@color/button_effect_2" />

                </shape>
            </item>
        </selector>
    </item>
</ripple>