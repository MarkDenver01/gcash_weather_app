<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/text_board" />

            <corners android:radius="8dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp" />

            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/text_board" />

            <corners android:radius="8dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp" />

            <solid android:color="@color/button_effect_3" />
        </shape>
    </item>
</selector>
